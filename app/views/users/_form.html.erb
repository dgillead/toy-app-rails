<%= form_for (user) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, required: 'required' %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, required: 'required' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
